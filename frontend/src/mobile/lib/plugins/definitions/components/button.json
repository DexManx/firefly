            "enum": [
                "button"
            ]
        },
        "type": {
            "type": "string",
            "description": "Must be @iota/core.",
            "enum": [
              "@iota/core"
            ]
        },
        "component": {
            "type": "string",
            "description": "Component name",
            "enum": [
              "Button"
            ]
        },
        "color": {
            "type": "string",
